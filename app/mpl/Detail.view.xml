<mvc:View
    height="100%"
    controllerName="mpl.Detail"
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">
    <Page>
        <customHeader>
            <Toolbar>
            <Title text=""/>
            <ToolbarSpacer/>
                <OverflowToolbarButton
                    type="Transparent"
                    icon="sap-icon://decline"
                    press=".handleClose"
                    tooltip="Close column"
                    visible="{= ${fcl>/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
            </Toolbar>
        </customHeader>
        <uxap:ObjectPageHeader
            objectTitle="{Status} [{LogLevel}]" 
            objectSubtitle="{IntegrationFlowName}">
            <uxap:actions>
                <uxap:ObjectPageHeaderActionButton icon="sap-icon://edit-outside" press="setLogLevel"/>
            </uxap:actions>
        </uxap:ObjectPageHeader>
        <f:SimpleForm>
            <f:content>
                <Label text="{i18n>MonitoringWebLink}" />
                <Link text="{MonitoringWebLink}" href="{MonitoringWebLink}" target="_blank"/>
                <Label text="{i18n>AlternateWebLink}" />
                <Link text="{MonitoringWebLink}"  href="{AlternateWebLink}" target="_blank"/>
            </f:content>
        </f:SimpleForm>
        <Panel>
            <Table items="{mpl>/Runs}">
                <columns>
                    <Column>
                        <Label text="{i18n>RunId}"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" press="navtoRunDetails" vAlign="Middle">
                        <cells>
                            <Text text="{mpl>Id}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </Panel>    
    </Page>
</mvc:View>